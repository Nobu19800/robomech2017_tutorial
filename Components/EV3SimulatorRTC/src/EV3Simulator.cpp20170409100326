extern "C"
{
 
  void EV3SimulatorInit(RTC::Manager* manager)
  {
    coil::Properties profile(ev3simulator_spec);
    manager->registerFactory(profile,
                             RTC::Create<EV3Simulator>,
                             RTC::Delete<EV3Simulator>);
  }
  
};


